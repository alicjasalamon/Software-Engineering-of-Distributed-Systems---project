<h1>Database interfaces</h1>

<script type="text/javascript">
    var institution = {
        name: "Institution",
        fields: [
            {name:"id.$id", type:"string"},
            {name:"name", type:"string"},
        ],
        interfaces: [
            {
                name: "Get institution",
                url: "/db/institution",
                parameters: [
                    {name:"id", type:"string"},
                ],
            },
            {
                name: "Get all institutions",
                url: "/db/institution/all",
                example: "$.ajax('/db/institution/all').success(function(data) { alert(data); });",
            },
            {
                name: "Add institution",
                url: "/db/institution/add",
                example: '$.ajax({ type: "POST", url: "db/institution/add", data: { "name": "Placowka gicior" }});',
                parameters: [
                    {name:"name", type:"string"},
                ],
            }
        ],
    };
    generateDocs(institution);
    
    var doctor = {
        name: "Doctor",
        fields: [
            {name:"id.$id", type:"string"},
            {name:"firstname", type:"string"},
            {name:"lastname", type:"string"},
            {name:"login", type:"string"},
            {name:"password", type:"string"},
            {name:"email", type:"string"},
            {name:"institution", type:"Institution"},
        ],
        interfaces: [
            {
                name: "Get doctor",
                url: "/db/doctor",
                parameters: [
                    {name:"id", type:"string"},
                ],
            },
            {
                name: "Get all doctors",
                url: "/db/doctor/all",
                example: '$.ajax("/db/doctor/all").success(function(data) { alert(data); });',
            },
            {
                name: "Add doctor",
                url: "/db/doctor/add",
                parameters: [
                    {name:"firstname", type:"string"},
                    {name:"lastname", type:"string"},
                    {name:"login", type:"string"},
                    {name:"password", type:"string"},
                    {name:"email", type:"string"},
                ],
            },
            {
                name: "Set institution",
                url: "/db/doctor/setInstitution",
                parameters: [
                    {name:"doctorid", type:"string"},
                    {name:"institutionid", type:"string"},
                ],
            }
        ],
    };
    generateDocs(doctor);
</script>
